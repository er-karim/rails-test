<p id="notice"><%= notice %></p>

<h1>Buildings</h1>

<table>
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Reference</th>
      <th scope="col">Address</th>
      <th scope="col">Zip code</th>
      <th scope="col">City</th>
      <th scope="col">Country</th>
      <th scope="col">Manager name</th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @buildings.each do |building| %>
    <tr>
      <td><%= building.id %></td>
      <td><%= building.reference %></td>
      <td><%= building.address %></td>
      <td><%= building.zip_code %></td>
      <td><%= building.city %></td>
      <td><%= building.country %></td>
      <td><%= building.manager_name %></td>
      <td>
        <%= link_to 'Show', building %>
        <%= link_to 'Edit', edit_building_path(building) %>
        <%= link_to 'Destroy', building, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

